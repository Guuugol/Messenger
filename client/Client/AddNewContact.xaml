<Window x:Name="AddNewContact1" x:Class="Client.AddNewContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление нового контакта" Height="339" Width="275" ResizeMode="NoResize" Closed="AddNewContact1_Closed">
    <Grid Background="#FF4D4A4A" OpacityMask="#FF4D4A4A">
        <Label Content="Введите никнейм для поиска:" HorizontalAlignment="Left" Height="33" Margin="10,47,0,0" VerticalAlignment="Top" Width="239" FontSize="16"/>
        <TextBox x:Name="TbLoginBox" HorizontalAlignment="Left" Height="37" Margin="27,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontSize="16"/>
        <Button x:Name ="BtnAdd" Content="Add" HorizontalAlignment="Left" Height="41" Margin="27,222,0,0" VerticalAlignment="Top" Width="107" FontSize="16" Click="btnAdd_Click"/>
        <Button x:Name ="BtnCancel"  Content="Cancel" HorizontalAlignment="Left" Height="41" Margin="156,222,0,0" VerticalAlignment="Top" Width="93" FontSize="16" Click="btnCancel_Click"/>
        <Label Content="Введите новый никнейм:" HorizontalAlignment="Left" Height="33" Margin="27,126,0,0" VerticalAlignment="Top" Width="222" FontSize="16"/>
        <TextBox x:Name="TbNicknameBox" HorizontalAlignment="Left" Height="37" Margin="27,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontSize="16"/>

    </Grid>
</Window>
