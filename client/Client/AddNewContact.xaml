<Window x:Name="AddNewContact1" x:Class="Client.AddNewContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление нового контакта" Height="276" Width="274" ResizeMode="NoResize">
    <Grid Background="#FF4D4A4A" OpacityMask="#FF4D4A4A">
        <Label Content="Введите никнейм:" HorizontalAlignment="Left" Height="33" Margin="27,47,0,0" VerticalAlignment="Top" Width="222" FontSize="16"/>
        <TextBox x:Name="TbLoginBox" HorizontalAlignment="Left" Height="37" Margin="27,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontSize="16"/>
        <Button x:Name ="btnAdd" Content="Add" HorizontalAlignment="Left" Height="41" Margin="27,157,0,0" VerticalAlignment="Top" Width="107" FontSize="16" Click="btnAdd_Click"/>
        <Button x:Name ="btnCancel"  Content="Cancel" HorizontalAlignment="Left" Height="41" Margin="156,157,0,0" VerticalAlignment="Top" Width="93" FontSize="16" Click="btnCancel_Click"/>

    </Grid>
</Window>
