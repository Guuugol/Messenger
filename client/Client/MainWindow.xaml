<Window x:Name="ContactList" x:Class="WpfApplication1.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contact List" Height="387.612" Width="390.005" OpacityMask="#FF4D4A4A">
    <Grid x:Name="ScreebGrid" Background="#FF4D4A4A" OpacityMask="#FF4D4A4A">
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="310*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ContactGrid" Grid.Row="1" FontSize="24" Grid.Column="1" Grid.ColumnSpan="4" CanUserResizeRows="False" MouseDoubleClick="ContactGrid_MouseDoubleClick"/>
        <ToolBarPanel Grid.Row="0" x:Name="Panel1" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Background="#FF4D4A4A" Orientation="Horizontal">
            <Button x:Name="AddContact" Content="Add" HorizontalAlignment="Left" Width="100"  Height="26" Margin="0,12,0,13" Click="AddContact_Click"  />
            <Button x:Name="ShowContact" Content="Show" HorizontalAlignment="Center" Width="100" Height="26" Margin="0,12,0,13"  />
            <Button x:Name="Exit" Content="Exit" Margin="0,12,0,13" Width="89"/>
        </ToolBarPanel>
    </Grid>
</Window>
