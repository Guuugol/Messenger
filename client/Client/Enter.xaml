<Window x:Class="Client.Enter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter" Height="300" Width="300" ResizeMode="NoResize">
    <Grid Background="#FF4D4A4A">
        <TextBox x:Name="TbLogin" Margin="31,0,25,171" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="238" Height="34" FontSize="16"/>
        <Label Content="Enter Login:" HorizontalAlignment="Left" Height="35" Margin="31,0,0,0" VerticalAlignment="Top" Width="238" FontSize="16"/>
        <Label Content="Enter Password:" HorizontalAlignment="Left" Height="32" Margin="31,69,0,0" VerticalAlignment="Top" Width="238" FontSize="16"/>
        <PasswordBox x:Name="PbPassword" HorizontalAlignment="Left" Margin="31,106,0,0" VerticalAlignment="Top" Height="34" Width="238" FontSize="16"/>
        <Button x:Name="BtnEnter" Content="Enter" HorizontalAlignment="Left" Margin="169,197,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="0.32,0.45" Height="49" FontSize="16" Click="btnEnter_Click"/>
        <Button x:Name="BtnSignUp" Content="Sign up" HorizontalAlignment="Left" Height="49" Margin="31,197,0,0" VerticalAlignment="Top" Width="113" FontSize="16" Click="btnSignUp_Click"/>

    </Grid>
</Window>
